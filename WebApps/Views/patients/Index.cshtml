        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.namePatients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phonePatients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.health_condition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doctor_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nurse_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idPatients">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idPatients">Details</a> |
