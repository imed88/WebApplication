@model IEnumerable<WebApps.Models.patients>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.namePatients)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.phonePatients)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.health_condition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.doctor_id)
