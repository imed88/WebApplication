        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameDoctors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailDoctors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneDoctors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specialist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idDoctors">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idDoctors">Details</a> |
