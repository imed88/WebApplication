@model IEnumerable<WebApps.Models.doctors>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nameDoctors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.emailDoctors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.phoneDoctors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.gender)
                </th>
